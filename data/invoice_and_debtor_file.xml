<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="ir_cron_invoice_file" model="ir.cron">
            <field name="name">Invoice File And Debtor File</field>
            <field name="type">ir.actions.server</field>
            <field name="model_id" ref="model_invoice_and_debtor" />
            <field name="state">code</field>
            <field name="code">model.run_cron_job()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 10:00:00')" />
            <field name="priority">1</field>
        </record>
    </data>
</odoo>
