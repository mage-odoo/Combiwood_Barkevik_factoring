<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.accounting</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form" />
            <field name="arch" type="xml">
                <xpath expr="//div[@id='use_invoice_terms']" position="inside" attrs="{'invisible':[('is_factoring','!=',True)]}">
                    <field name="is_factoring" invisible="1"></field>
                    <p attrs="{'invisible':[('is_factoring', '!=', True)]}">
                        <br />
                        <div class="o_setting_right_pane">
                            <b>Assignment Clause</b>
                            <p>
                                <field name="assignment_clause"></field>

                            </p>
                        </div>
                        <div class="o_setting_right_pane">
                            <b>Partner Name</b>
                            <p>
                                <field name="partner_account_id" domain="[('factoring_partner','=','True')]"></field>
                            </p>
                        </div>

                    </p>
                </xpath>
            </field>
        </record>

    </data>


</odoo>
